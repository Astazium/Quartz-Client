<container id="player_data_%{id}" size="400,80" color="#7f7f7f3e">

    <image id="player_icon_%{id}" src='%{player_icon}'
        size='64'
        pos='8,8'/>

    <label id="player_name_%{id}" pos="78,8">%{player_name}</label>
    <label id="player_pid_%{id}" color="#316b8dff" pos="78,24">%{player_pid}</label>
    <button margin='4,4,14,4'
            gravity='center-right'
            color='#00000000'
            hover-color='#FFFFFF2B'
            padding='0'
            onclick='player(%{id})'>
        <image id="player_action_%{id}" src='%{player_action}' size='32,32' color='#FFFFFF50'/>
    </button>
</container>