<container id="server_edit" gravity="center-center" size="484,150" color='#00000073'>
<panel orientation="vertical" size="484,150" color='#00000000'>
    <label pos="15,0">@Server_name</label>
    <textbox pos='15,115' size='260,30' sub-consumer="edit_server_name" id='server_name' hint='@Server_name'>%{name}</textbox>

    <label pos="15,0">IP:</label>
    <textbox pos='15,150' size='260,30' sub-consumer="edit_server_ip" id='ip' hint='IP'>%{ip}</textbox>
</panel>
<button gravity="bottom-center" size="484,40" onclick='finish_edit()'>@quartz.done</button>
</container>